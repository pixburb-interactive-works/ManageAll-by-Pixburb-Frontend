<div class="main-body">
    {{!-- Header --}}
    <div class="page-header h-80">
        <div class="pull-left h-100p w-50p">
            <img src="images\Logo.png" class="pl-30 mt-m-20 mb-m-20">
        </div>
        <div class="pull-right h-100p w-50p">
            <a href="#" class="pull-right mt-m-20 mb-m-20" {{action "showNotification"}}>
                <img src="images\notif-icon.svg" class="w-30 h-30 mt-40 mr-40">
            </a>
        </div>

    </div>
    {{!-- left pane --}}
    <div class="w-20p pull-left bg-ebeef2 tabs">
        {{#each tabs as |tab|}}
        <div class="h-50 tab pt-10 pb-10 pl-30 pointer" {{action "selectTab" tab.tab}} id={{tab.tab}}>
            <img src={{tab.image}} class="w-30 h-30 inline-icon">
            <span class="">{{tab.name}}</span>
        </div>
        {{/each}}
        <div class="profile bg-d8dce2">
            <img src={{profileIcon}} class="w-30p h-30p pt-20 ml-35" />
            <br>
            <span class="tc mt-10 mb-10"><b>{{userDisplayName}}</b></span>
            <br>
            <span class="tc mt-10 mb-10">{{userMailId}}</span>
            <br>
            <span class="tc mt-10 mb-10 c-0db46e">Your Plan : {{plan}}</span>
            <br>
            <button class="btn-0db46e">Settings</button>

        </div>
    </div>
    {{!-- dashboard --}}
    <div class="w-80p pull-right">
        {{load-content data=selectedTab}}
    </div>

</div>

{{!-- notification --}}
{{#if showNotification}}
<div class="notification-tab pull-right w-20p">
    <div class="notification-header">
        <h3 class="ml-25">NOTIFICATION</h3>
    </div>
    <div class="notification-body ml-25">
        {{!-- {{notification-list data=notificationData}} --}}
    </div>
</div>
{{/if}}